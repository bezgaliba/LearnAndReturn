<mvc:View
    controllerName="learnandreturn.controller.AddCourse"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc">
    <Button text="{i18n>navBackButtonTitle}" press=".onNavLOList"></Button>
        <f:SimpleForm id="simpleForm" title="{i18n>addCourseHeader}" editable="true" class="editableForm sapUiSmallMarginTopBottom">
            <f:content>
            <Label text="{i18n>addCourseTitle}"/>
            <Input
                width="600px"
                id="formCourseTitle"
                required="true"
                placeholder="..."/>
            <Label text="{i18n>addCourseDescription}"/>
            <Input
                width="600px"
                id="formCourseDescription"
                required="true"
                placeholder="..."/>
            <Label text="{i18n>addCourseImageURL}"/>
            <Input
                width="600px"
                id="formCourseImageURL"
                placeholder="..." />
            <Label text="{i18n>addCourseCategory}"/>
            <Select
                width="300px"
                id="formCourseCategory"
                required="true"
                items="{
                    path: '/CourseCategory',
                    sorter: {
                            path: 'name'
                        }
                    }">
                <core:Item key="{ID}" text="{name}" />
            </Select>
            <Label text="{i18n>addCourseMaterial}"/>
            <MultiComboBox
                width="600px"
                id="formCourseMaterial"
                required="true"
                placeholder="{i18n>selectAction}"
                items="{
                    path: '/LearningObject',
                    sorter: {
                        path: 'Name'
                    }
                }">
                <core:Item key="{ID}" text="{Name}"/>
            </MultiComboBox>
        </f:content>
     </f:SimpleForm>
     <Button text="{i18n>createAction}" press="onCreate"></Button>
     <Button text="Testing" press=".onTest"></Button>
</mvc:View>