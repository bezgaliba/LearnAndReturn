<mvc:View
    controllerName="learnandreturn.controller.CourseMaterialList"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:smartList="sap.ui.comp.smartlist"
    xmlns:mvc="sap.ui.core.mvc">
    <Button
        text="{i18n>navBackButtonTitle}"
        press=".onNavBack"/>
    <Title
        text="{i18n>materialTitle} {CourseName}"
        level="H2"/>
    <List
        id="learningObjectList"
        select=".onSelect"
        items="{
                path: 'CourseMaterial',
                parameters: {
                    expand: 'LearningObject'
                }
            }"
        >
			<headerToolbar>
				<Toolbar>
					<Title
                    level="H3"
                    text=""/>
					<ToolbarSpacer/>
				</Toolbar>
			</headerToolbar>
			<ObjectListItem
                press=".onPress"
                title="{LearningObject/Name}"
                type="Active"
                showMarkers="true"
                number="Status:">
                <firstStatus>
                    <ObjectStatus
                        text="{i18n>materialTrainingCompleted}"
                        state="Success"
                    />
			    </firstStatus>
                <secondStatus>
                    <ObjectStatus
                        text="{i18n>materialTrainingPending}"
                        state="Warning"
                    />
                </secondStatus>
                <markers>
                        <ObjectMarker type="Favorite"/>
                </markers>
            </ObjectListItem>
		</List>
</mvc:View>