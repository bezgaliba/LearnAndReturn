<mvc:View
    controllerName="learnandreturn.controller.CourseMaterialList"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:smartList="sap.ui.comp.smartlist"
    xmlns:semantic="sap.f.semantic"
    xmlns:mvc="sap.ui.core.mvc">
    
    <Page
    title="{i18n>materialTitle} {CourseName}"
    busy="{materialView>/busy}"
    busyIndicatorDelay="{materialView>/delay}">
    <List
        class="sapUiSmallMarginBottom"
        id="learningObjectList"
        select=".onSelect"
        items="{
                path: 'CourseMaterial',
                parameters: {
                    expand: 'LearningObject'
                }
            }"
        >
			<headerToolbar>
				<Toolbar>
					<Title
                    level="H3"
                    text=""/>
					<ToolbarSpacer/>
				</Toolbar>
			</headerToolbar>
			<ObjectListItem
                press=".onPress"
                title="{LearningObject/Name}"
                type="Active"
                showMarkers="true"
                number="{i18n>learningObjectAbout}">
                <firstStatus>
                    <ObjectStatus
                        text="Created by: {LearningObject/createdBy}"          
                    />
			    </firstStatus>
                <secondStatus>
                    <ObjectStatus
                        text="{
                            path: 'LearningObject/createdAt',
                            formatter: '.formatter.shortDate'
                        }"
                    />
                </secondStatus>
            </ObjectListItem>
		</List>
        <Button
        class="sapUiSmallMarginBegin"
        text="{i18n>navBackButtonTitle}"
        press=".onNavBack"/>
    </Page>
</mvc:View>