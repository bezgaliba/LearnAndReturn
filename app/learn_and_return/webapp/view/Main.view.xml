<mvc:View controllerName="learnandreturn.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form" 
    xmlns:c="sap.ui.core" >
    <Page id="page" title="{i18n>title}" showHeader="false">
        <content>
            <FlexBox
				alignItems="Center"
				justifyContent="Center">
                <Text
                    text="LEARN AND RETURN :)"
                   />
                <Text
                    text="info no /userapi/currentUser"
                   />
            </FlexBox>
            <FlexBox
				alignItems="Start"
				justifyContent="End">
                <Button
                    text="Logout"
                    type="Emphasized"
                    class="sapUiSmallMarginEnd"
                    press="onLogoutConfirmation"/>
            </FlexBox>

            <OverflowToolbar>
                <SearchField placeholder="Enter Course suggestion.." liveChange=".onSearch" width="100%" />
            </OverflowToolbar>
            <List
                id="courseList"
                press="onItem"
                items="{
                        path: '/Course',
                        sorter: {
                            path: 'CourseName'
                        }
                    }"
                headerText="Available Courses">
                <ObjectListItem
                    title="{CourseName}"
                    type="Active"
                    >
                    <ObjectAttribute text="{Description}"/>
                </ObjectListItem>
            </List>
        </content>
    </Page>
</mvc:View>
