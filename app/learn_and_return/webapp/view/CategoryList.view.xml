<mvc:View
    controllerName="learnandreturn.controller.CategoryList"
    xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Page
		enableScrolling="true"
		title="Categories (Admin/Instructor view)"
		titleLevel="H4">
        <List
        mode="SingleSelectLeft"
        id="categoryList"
        select=".onSelect"
        items="{
            path: '/CourseCategory',
                sorter: {
                    path: 'name'
                }
            }">
			<headerToolbar>
				<Toolbar>
					<Title
                    level="H3"
                    text=""/>
					<ToolbarSpacer/>
                    <Button
                    text="{i18n>navBackButtonTitle}"
                    press=".onNavHome"/>
                    <SearchField
                    placeholder="Search for Category..."
                    liveChange=".onSearch"
                    width="40%"/>
                    <Button
                        id="createCategory"
                        icon="sap-icon://add"
                        tooltip="{i18n>createAction}"
                        press=".onNavCreate"
                        enabled="false"
                    />
                    <Button
                        id="deleteCategory"
                        icon="sap-icon://delete"
                        tooltip="{i18n>deleteAction}"
                        press=".onDeleteConfirmation"
                    />
					<Button
                        icon="sap-icon://settings"
                        press=".handleButtonPress"
                    />
				</Toolbar>
			</headerToolbar>
			<ObjectListItem
            press="onPress"
            title="{name}"
            type="Active">
                <ObjectAttribute
                text="{descr}"/>
            </ObjectListItem>
		</List>
	</Page>
</mvc:View>