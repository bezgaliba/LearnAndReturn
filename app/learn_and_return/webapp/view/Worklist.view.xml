<mvc:View
    controllerName="learnandreturn.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:semantic="sap.f.semantic">

    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false">

        <semantic:titleHeading>
            <FlexBox
                height="50px"
				alignItems="Center"
				justifyContent="End">
                <Button
                    text="Logout"
                    type="Emphasized"
                    class="sapUiSmallMarginEnd"
                    press="onLogoutConfirmation"/>
                <Button
                    class="sapUiSmallMargin"
                    text="Learning Objects"
                    press="onNavLO"/>
                <Button
                    class="sapUiSmallMarginEnd"
                    text="Course Category"
                    press="onNavCat"/>
                <Title
                    class="sapUiSmallMargin"
                    text="Learn ï¼† Return"/>
            </FlexBox>
        </semantic:titleHeading>

        <semantic:content>
            <Table
                id="courseTable"
                mode="SingleSelectLeft"
                width="auto"
                items="{
                    path: '/Course',
                    parameters: {
                        expand: 'CourseCategory'
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            id="tableHeader"
                            text="{worklistView>/worklistTableTitle}"
                            level="H3"/>
                        <ToolbarSpacer />
                        <Button
                            id="createCourse"
                            icon="sap-icon://add"
                            tooltip="{i18n>createAction}"
                            press=".onNavCreate"
                        />
                        <Button
                        id="deleteCourse"
                        icon="sap-icon://delete"
                        tooltip="{i18n>deleteAction}"
                        press=".onDeleteConfirmation"
                        />
                        <Select
                            id="selectedCategory"
                            change=".onLiveChange"
                            items="{
                                path: '/CourseCategory',
                                sorter: {
                                        path: 'name',
                                        ascending: true
                                    }
                                }">
                            <core:Item key="" text="All" />
                            <core:Item key="{ID}" text="{name}" />
                        </Select>
                        <SearchField
                            id="searchField"
                            tooltip="{i18n>worklistSearchTooltip}"
                            search=".onSearch"
                            width="200px">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="titleColumn">
                        <Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
                    </Column>
                    <Column id="categoryColumn" hAlign="End">
                        <Text text="{i18n>tableCategory}" id="Category"/>
                    </Column>
                    <Column id="descriptionColumn" hAlign="End">
                        <Text text="{i18n>tableDescription}" id="Description"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onPress">
                        <cells>
                            <ObjectIdentifier
                                title="{CourseName}"/>
                            <ObjectAttribute
                                text="{CourseCategory/name}" />
                            <ObjectAttribute
                                text="{ShortDescription}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>

    </semantic:SemanticPage>

</mvc:View>