<mvc:View
    controllerName="learnandreturn.controller.AddLearningObject"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc">
    <Button text="{i18n>navBackButtonTitle}" press=".onNavLOList"></Button>
     <f:SimpleForm id="simpleForm" title="{i18n>addLearningObjectHeader}" editable="true" class="editableForm sapUiSmallMarginTopBottom">
      <f:content>
       <Label text="{i18n>addLearningObjectName}"/>
       <Input
            id="formLearningObjectName"
            required="true"
            placeholder="..."/>
       <Label text="{i18n>addLearningObjectType}"/>
       <Select
            id="formTrainingType"
            required="true"
            items="{
                path: '/LearningObjectType'
                }">
			<core:Item key="{ID}" text="{name}" />
       </Select>
       <Label text="{i18n>addLearningObjectContent}"/>
       <Input
            id="formLearningObjectContent"
            required="true"
            placeholder="..."/>
       <Label text="{i18n>formLearningObjectDescription}"/>
       <Input
            id="formLearningObjectDescription"
            placeholder="..." />
      </f:content>
     </f:SimpleForm>
     <Button text="{i18n>createAction}" press="onCreate"></Button>
     <Button text="Validate" press=".checkValidation"></Button>
</mvc:View>