<mvc:View
    controllerName="learnandreturn.controller.LearningObjectList"
    xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
        <List
        mode="SingleSelectLeft"
        id="learningObjectList"
        select=".onSelect"
        items="{
            path: '/LearningObject',
                sorter: {
                    path: 'createdAt'
                }
            }">
			<headerToolbar>
				<Toolbar>
					<Title
                    level="H3"
                    text=""/>
					<ToolbarSpacer/>
                    <Button
                    text="{i18n>navBackButtonTitle}"
                    press=".onNavHome"/>
                    <Button
                        id="createLearningObject"
                        icon="sap-icon://add"
                        tooltip="{i18n>createAction}"
                        press=".onNavCreate"
                    />
                    <Button
                        id="deleteLearningObject"
                        icon="sap-icon://delete"
                        tooltip="{i18n>deleteAction}"
                        press=".onDeleteConfirmation"
                    />
                    <SearchField
                    placeholder="Search for Learning Object..."
                    liveChange=".onSearch"
                    width="40%"/>
				</Toolbar>
			</headerToolbar>
			<ObjectListItem
            press="onPress"
            title="{Name}"
            type="Active">
                <ObjectAttribute
                text="{Type/name}"/>
            </ObjectListItem>
		</List>
</mvc:View>