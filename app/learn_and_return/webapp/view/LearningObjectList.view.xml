<mvc:View
    controllerName="learnandreturn.controller.LearningObjectList"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Page
		enableScrolling="true"
		title="LOs (Admin/Instructor view)"
		titleLevel="H4">
        <List
        mode="SingleSelectLeft"
        id="learningObjectList"
        select="onSelect"
        items="{
            path: '/LearningObject',
                sorter: {
                    path: 'createdAt'
                }
            }">
			<headerToolbar>
				<Toolbar>
					<Title
                    level="H3"
                    text=""/>
					<ToolbarSpacer/>
                    <Button
                    text="{i18n>navBackButtonTitle}"
                    press=".onNavHome"/>
                    <SearchField
                    placeholder="Search for Learning Object..."
                    liveChange=".onSearch"
                    width="40%"/>
                    <Button
                    id="deleteUserButton"
                    icon="sap-icon://delete"
                    tooltip="{i18n>deleteButtonTip}"
                    press=".onDeleteConfirmation"/>
					<Button
                    icon="sap-icon://settings"
                    press=".handleButtonPress"/>
				</Toolbar>
			</headerToolbar>
			<ObjectListItem
            press="onPress"
            title="{Name}"
            type="Active">
                <ObjectAttribute
                text="{Type}"/>
            </ObjectListItem>
		</List>
	</Page>
</mvc:View>