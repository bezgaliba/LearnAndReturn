<mvc:View
    controllerName="learnandreturn.controller.LearningObjectList"
    xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Page
		enableScrolling="true"
		title="LOs (Admin/Instructor view)"
		titleLevel="H4">
        <List
        mode="SingleSelectLeft"
        id="learningObjectList"
        select=".onSelect"
        items="{
            path: '/LearningObject',
                sorter: {
                    path: 'createdAt'
                }
            }">
			<headerToolbar>
				<Toolbar>
					<Title
                    level="H3"
                    text=""/>
					<ToolbarSpacer/>
                    <Button
                    text="{i18n>navBackButtonTitle}"
                    press=".onNavHome"/>
                    <SearchField
                    placeholder="Search for Learning Object..."
                    liveChange=".onSearch"
                    width="40%"/>
                    <MultiComboBox
                        placeholder="Select Type..."
                        maxWidth="300px"
                        items="{
                            path: '/LearningObjectType',
                            sorter: {
                                path: 'name'
                            }
                        }">
                        <core:Item key="{ID}" text="{name}"/>
                    </MultiComboBox>
                    <Button
                        id="createLearningObject"
                        icon="sap-icon://add"
                        tooltip="{i18n>createAction}"
                        press=".onNavCreate"
                    />
                    <Button
                        id="deleteLearningObject"
                        icon="sap-icon://delete"
                        tooltip="{i18n>deleteAction}"
                        press=".onDeleteConfirmation"
                    />
					<Button
                        icon="sap-icon://settings"
                        press=".handleButtonPress"
                    />
				</Toolbar>
			</headerToolbar>
			<ObjectListItem
            press="onPress"
            title="{Name}"
            type="Active">
                <ObjectAttribute
                text="{Type/name}"/>
            </ObjectListItem>
		</List>
	</Page>
</mvc:View>