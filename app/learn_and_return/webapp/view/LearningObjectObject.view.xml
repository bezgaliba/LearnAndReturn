<mvc:View
    controllerName="learnandreturn.controller.LearningObjectObject"
    displayBlock="true"
    xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
    <Page
		title="{i18n>learningObjectTitle}"
		class= "sapUiResponsivePadding--header" >
		<content>
			<Button
				text="{i18n>navBackButtonTitle}"
				press=".onNavBack"/>
			<Button
				icon="sap-icon://edit"
				text="{i18n>editAction}"
				type="Emphasized"
                class="sapUiSmallMarginEnd"
				press=".onEdit"/>
			<ObjectHeader
				title="{Name}"
				backgroundDesign="Solid">
				<statuses>
					<ObjectStatus title="{i18n>learningObjectStatusType}" text="{Type/name}" state="Success" />
				</statuses>
				<attributes>
					<ObjectAttribute text="{Description}" />
				</attributes>
			</ObjectHeader>
			<IconTabBar
				expanded="{device>/isNoPhone}"
				class="sapUiSmallMarginBottom sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter
						text="{i18n>learningObjectContentTabTitle}">
						<f:SimpleForm
							minWidth="1024"
							maxContainerCols="2"
							layout="ResponsiveGridLayout">
							<core:Title text="{i18n>learningObjectContentHeaderTitle}"/>
							<Label text="{i18n>learningObjectContentTitle}"/>
							<!-- <core:HTML content='&lt;iframe src=&quot;{Content}&quot;/iframe&gt;'/> -->
							<Text text="{Content}"/>
							<core:Title text="{i18n>learningObjectGuideHeaderTitle}"/>
							<Label text="{i18n>learningObjectGuideTitle}" />
							<Text text="{Guide}"/>
							<core:Title text="{i18n>learningObjectGuideCompletionTitle}"/>
							<Button
								type="Accept"
								width="200px"
								text="{i18n>learningObjectGuideCompletionBtn}"
								press=".onCompletion"/>
						</f:SimpleForm>
					</IconTabFilter>
					<IconTabFilter
						text="{i18n>learningObjectLogsTabTitle}">
						<f:SimpleForm
							minWidth="1024"
							maxContainerCols="2"
							layout="ResponsiveGridLayout">
							<f:title>
								<core:Title text="{i18n>learningObjectHistoryTitle}"/>
							</f:title>
							<Label text="{i18n>createdBy}"/>
							<Text text="{createdBy}"/>
							<Label text="{i18n>createdAt}"/>
							<Text text="{createdAt}"/>
							<Label text="{i18n>modifiedBy}"/>
							<Text text="{modifiedBy}"/>
							<Label text="{i18n>modifiedAt}"/>
							<Text text="{modifiedAt}"/>
						</f:SimpleForm>
					</IconTabFilter>
					<IconTabFilter
						text="{i18n>Completion}">
						<f:SimpleForm
							minWidth="1024"
							maxContainerCols="2"
							layout="ResponsiveGridLayout">
							<f:title>
								<core:Title text="{i18n>learningObjectCompletionTitle}"/>
							</f:title>
							<List
								items="{
									path: 'CompletionList'
								}"
								id="completionList"
								noDataText="{i18n>learningObjectNoCompletion}"
							>
							<ObjectListItem
							press=""
							title="{createdBy}"
							unit="{createdAt}"
							>
							</ObjectListItem>
						</List>
						</f:SimpleForm>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
	</Page>
</mvc:View>