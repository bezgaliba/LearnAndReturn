<mvc:View
    controllerName="learnandreturn.controller.Object"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:semantic="sap.f.semantic"
    xmlns:l="sap.ui.layout">

    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false"
        busy="{objectView>/busy}"
        busyIndicatorDelay="{objectView>/delay}">

        <semantic:titleHeading>
            <Title
                text="{CourseName}"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:headerContent>
            <Button
                class="sapUiSmallMarginEnd"
                text="{i18n>navBackButtonTitle}"
                press=".onNavBack"/>
            <Button
				icon="sap-icon://edit"
				text="{i18n>editAction}"
				type="Emphasized"
                class="sapUiSmallMarginEnd"
				press=".onEdit"/>
            <FlexBox
                alignItems="Start"
                justifyContent="Center">
                <l:VerticalLayout width="100%">
                    <Image
                        src="{ImageURL}"
                        width="30%"

                        height="auto">
                    </Image>
                    <Title
                        text="Created by: {createdBy}"
                        />
                    <Title
                        text="Created at : {createdAt}"
                        />
                    <Button
                        text="{i18n>enrollNowButtonTitle}"
                        type="Accept"
                        press=".onEnroll"/>
                </l:VerticalLayout>
            </FlexBox>
        </semantic:headerContent>
        <semantic:content>
            <l:VerticalLayout width="100%">
            <Panel
                backgroundDesign="Transparent"
                headerText="{i18n>objectDescription}">
                <ObjectAttribute
                text="{Description}"
                />
            </Panel>
                <Panel
                    backgroundDesign="Transparent"
                    headerText="{i18n>objectReview}"
                    >
                    <content>
                        <FlexBox
                                direction="Column"
                                alignItems="Start">

                            <Text
                                class="sapUiSmallMarginTop"
                                text="{objectView>/avg}"/>
                            <RatingIndicator
                                    id="ratingIndicator"
                                    maxValue="5"
                                    class="sapUiLargeMarginEnd"
                                    value="5"
                                    change=".setIndicator"
                                    iconSize="16px"
                                    tooltip="Rating Tooltip"/>
                        </FlexBox>
                        <FeedInput
                            id="commentItem"
                            post=".onPost"/>
                        <List
                            id="reviewList"
                            busy="{objectView>/busy}"
                            busyIndicatorDelay="{objectView>/delay}"
                            growing="true"
                            growingThreshold="5"
                            items="{
                                path: 'Review',
                                sorter: {
                                    path: 'createdAt',
                                    descending: true
                                }
                            }"
                            noDataText="{i18n>objectNoData}"
                            showSeparators="Inner"
                            >
                            <FeedListItem
                                sender="{createdBy}"
                                info="{
                                    path: 'ReviewIndicator',
                                    formatter: '.formatter.intToStars'
                                }"
                                text="{Comment}"
                                timestamp="{createdAt}"
                                />
                        </List>
                    </content>
                </Panel>
            </l:VerticalLayout>
        </semantic:content>
    </semantic:SemanticPage>

</mvc:View>