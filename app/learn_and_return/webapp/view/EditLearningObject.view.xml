<mvc:View
   controllerName="learnandreturn.controller.EditLearningObject"
   displayBlock="true"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:f="sap.ui.layout.form"
   xmlns:main="sap.ui.webc.main"
   xmlns:core="sap.ui.core">
     <f:SimpleForm id="simpleForm" title="{i18n>editAction} ''{Name}'' {i18n>learningObjectTitle}" editable="true" class="editableForm sapUiSmallMarginTopBottom">
      <f:content>
      <Text 
         text="Note that changes are saved automatically."/>
         <Label text="{i18n>addLearningObjectName}"/>
         <Input
            value="{Name}"
            id="formLearningObjectName"
            required="true"
            placeholder="..."/>
         <Label text="{i18n>addLearningObjectType}"/>
         <Select
               editable="true"
               id="formLearningObjectType"
               required="true"
               items="{
                  path: '/LearningObjectType'
                  }">
            <core:Item key="{ID}" text="{name}" />
         </Select>
         <Label text="{i18n>addLearningObjectContent}"/>
         <Input
            value="{Content}"
            id="formLearningObjectContent"
            required="true"
            placeholder="..."/>
         <Label text="{i18n>addLearningObjectGuide}"/>
         <Input 
            value="{Guide}"
            height="500px"
            required="true"
            id="formLearningObjectGuide"
            placeholder="..." />
         <Label text="{i18n>addLearningObjectDescription}"/>
         <Input 
            value="{Description}"
            height="500px"
            id="formLearningObjectDescription"
            placeholder="..." />
         </f:content>
      </f:SimpleForm>
     <Button text="{i18n>navBackButtonTitle}" press=".onNavBack"></Button>
</mvc:View>