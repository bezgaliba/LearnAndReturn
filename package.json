{
  "name": "LearnAndReturn",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": ">=6",
    "@sap/xssec": "^3",
    "express": "^4",
    "hdb": "^0.19.0",
    "passport": "^0"
  },
  "devDependencies": {
    "@sap/hdi-deploy": "^4.4.1",
    "@sap/ux-specification": "^1.102.9",
    "rimraf": "^3.0.2",
    "sqlite3": "^5.0.4"
  },
  "engines": {
    "node": "^16"
  },
  "scripts": {
    "start": "cds run",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-app_worklist": "cds watch --open app_worklist/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy LearnAndReturn --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "app": "npm start --prefix app",
    "watch-learn_and_return": "cds watch --open learn_and_return/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "build": {
      "tasks": [
        {
          "for": "hana",
          "dest": "../db"
        },
        {
          "for": "node-cf"
        }
      ]
    },
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "sqlite.db"
        }
      },
      "auth": {
        "kind": "xsuaa"
      },
      "approuter": {
        "kind": "cloudfoundry"
      },
      "[production]": {
        "db": {
          "kind": "hana-cloud"
        },
        "auth": {
          "kind": "xsuaa"
        }
      }
    }
  },
  "sapux": [
    "app/app_worklist",
    "app/app_worklist",
    "app/app_worklist",
    "app/learn_and_return"
  ]
}